<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.musketeers.realm.AnalysisActivity"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="255dp"

        android:elevation="2dp"
        android:layout_marginTop="15dp"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/chart1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:foregroundGravity="center"
                >

            </com.github.mikephil.charting.charts.PieChart>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:visibility="invisible"
                >


            </com.github.mikephil.charting.charts.LineChart>
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="40dp"
                android:text="75 Kw"
                android:textSize="27sp"
                android:textStyle="bold">

            </TextView>
        </FrameLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="5dp"
        android:elevation="2dp"
        app:cardCornerRadius="8dp">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="5dp"

                    android:id="@+id/card1"
                    android:layout_marginStart="2dp"
                    android:layout_gravity="center_vertical">

                    <ImageView

                        android:layout_width="65dp"
                        android:layout_height="55dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="2dp"
                        android:src="@drawable/water" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="2dp"
                    android:layout_gravity="center_vertical"
                    android:elevation="2dp"
                    android:id="@+id/card2">

                    <ImageView
                        android:layout_width="65dp"
                        android:layout_height="55dp"
                        android:layout_gravity="center"
                        android:src="@drawable/iron"/>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="2dp"
                    android:layout_gravity="center_vertical"
                    android:elevation="2dp"
                    android:id="@+id/card3">

                    <ImageView
                        android:layout_width="65dp"
                        android:layout_height="55dp"
                        android:layout_gravity="center"
                        android:src="@drawable/streetlamps"/>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="2dp"
                    android:layout_gravity="center_vertical"
                    android:elevation="2dp"
                    android:id="@+id/card4">

                    <ImageView
                        android:layout_width="65dp"
                        android:layout_height="55dp"
                        android:layout_gravity="center"
                        android:src="@drawable/lightbulb"/>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="2dp"
                    android:layout_gravity="center_vertical"
                    android:elevation="2dp"
                    android:id="@+id/card5">

                    <ImageView
                        android:layout_width="65dp"
                        android:layout_height="55dp"
                        android:layout_gravity="center"
                        android:src="@drawable/fan"/>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="2dp"
                    android:layout_gravity="center_vertical"
                    android:elevation="2dp"
                    android:id="@+id/card6">

                    <ImageView
                        android:layout_width="65dp"
                        android:layout_height="55dp"
                        android:layout_gravity="center"
                        android:src="@drawable/wash"/>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="2dp"
                    android:layout_gravity="center_vertical"
                    android:elevation="2dp"
                    android:id="@+id/card7">

                    <ImageView
                        android:layout_width="65dp"
                        android:layout_height="55dp"
                        android:layout_gravity="center"
                        android:src="@drawable/waterheater"/>

                </android.support.v7.widget.CardView>


            </LinearLayout>

        </HorizontalScrollView>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="206dp"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/card9"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_marginTop="5dp"

            app:cardElevation="3dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="65Kw"
                android:textSize="45sp"
                android:textStyle="bold"

                />


            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:text="ECO USAGE"
                android:textSize="20sp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold">

            </TextView>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card8"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="5dp"

            app:cardElevation="3dp">


            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="10"
                android:textSize="45sp"
                android:textStyle="bold"

                />


            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:text="ACTIVE DEVICES "
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"

                />
        </android.support.v7.widget.CardView>



    </LinearLayout>


</LinearLayout>
